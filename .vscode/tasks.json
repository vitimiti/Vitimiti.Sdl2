{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-linux-x64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ExampleGame/ExampleGame.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c",
                "Debug",
                "-r",
                "linux-x64",
                "--self-contained"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/ExampleGame/ExampleGame.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}